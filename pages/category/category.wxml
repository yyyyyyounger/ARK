<van-button type="primary" size="normal" color="#3498DB" block class="flexCenter" bindtap="jumpToholdACourses">我要開課<van-icon name="plus"/></van-button>


<van-tabs sticky swipeable animated color="#3498DB">

  <van-tab title="最新發佈">

    <van-sticky>
<!-- 下拉菜單 -->
      <van-dropdown-menu>
        <van-dropdown-item value="{{ dropDownIndex }}" options="{{ option1 }}" bind:change="dropDownChange" />
        <van-dropdown-item value="{{0}}" options="{{ dropDownIndex==0 ? option3 : option2 }}" />
      </van-dropdown-menu>
    </van-sticky>

    <!-- <view wx:for="{{recentCourseInfoArray}}" wx:key="courseId"> -->
      
      <!-- 課程卡片 - 未完成 -->
      <view class="cu-card dynamic ">
        <view class="cu-item shadow">
          <view class="cu-list menu-avatar">
            <view class="cu-item">
              <view class="cu-avatar round lg" style="background-image:url({{courseCloudData.avatarUrl}});"></view>
              <view class="content flex-sub">
                <view>{{courseInfoInput[shortNameIndex.speakerName].input}}</view>
              </view>
              <!-- add/cancel Follow按鈕 -->
              <van-button 
                icon="star-o" 
                size="small" 
                color="#3498DB" 
                type="primary" 
                round 
                data-courseid="{{recentCourseInfoArray[index].courseId}}" 
                bind:click="addFollow">Follow</van-button><text decode="true" class="text-right">&nbsp;&nbsp;</text>
            </view>
          </view>
          <view class="slot text-content" bindtap="jumpToCourseDetail">
            日期：{{courseInfoInput[shortNameIndex.courseTime].input[0]}} 
            <view>時間：{{courseInfoInput[shortNameIndex.courseTime].input[1]}} - {{courseInfoInput[shortNameIndex.courseTime].input[2]}}</view>
            <view>地點：{{courseInfoInput[shortNameIndex.courseAdres].input}}</view>
          </view>
          <view class="slot text-right">
            <!-- 頭像組 -->
            <view class="cu-avatar-group">
              <view class="cu-avatar round lg" wx:for="{{5}}" wx:key style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big1000{{index+1}}.jpg);"></view>
            </view> <text decode="true">...&nbsp;&nbsp;</text>
          </view>
        </view>
      </view>
    <!-- </view> -->
  <view class="bottom-watch"></view>

