<!-- 課程詳情頁 courseDetail -->
<!-- 不同權限有不同視角 -->

<!-- 設置步驟條 - 未完成 -->
<view class="cu-steps">
  <view class="cu-item {{index > stepsActive ?'':'text-themeBlue'}}" wx:for="{{numList}}" wx:key="item">
  <!-- 該處判斷 >0為第0位active，>1為第1位active，如此類推 -->
    <text class="num" data-index="{{index + 1}}"></text> {{item.name}}
  </view>
</view>

<van-skeleton title avatar row="15" loading="{{ loading }}">
  <!-- 講者剛提交雲端的視角 -->
  <block wx:if="{{courseCloudData.courseState=='checking' || courseCloudData.courseState=='editing'}}">
    <van-notice-bar
      color="#ed6a0c"
      background="#ecf9ff"
      left-icon="star-o"
      wrapable
      text="在審核通過後，你仍然可以修改部分課程信息和上傳文件！"
    />
    <van-cell-group
    wx:for="{{courseInfoInput}}"
    wx:key="id"
    >
      <!-- wx:if="{{InfoDisplay[index]}}" -->
      <van-cell title-width="250rpx" center size="large" title="{{item.name}}" data-cellIndex="{{index}}" bind:click="bindCellClick" >
        <view>{{item.input}}</view>
      </van-cell>
    </van-cell-group>
  </block>

  <!-- 路人視角 -->
  <block wx:if="{{courseCloudData.courseState=='opening'}}">

  <!-- 發起人 -->
  <view class="grid col-1 padding-sm">
    <view class="bg-themeBlue padding radius text-center shadow-blur " >
      <text class="text-lg" decode="true">&nbsp;&nbsp;發起人</text>
    </view>
  </view>

  <van-row class="grid col-1 padding-sm">
    <van-col span="4" offset="4" style="text-align: center;">
      <view class="cu-avatar round lg shadow-blur" style="background-image:url({{courseCloudData.avatarUrl}}); ">
        <view class="tag">講者</view>
      </view>
      <view style="text-align: center;">{{courseInfoInput[shortNameIndex.speakerName].input}}</view>
    </van-col>
    <van-col span="4" offset="2" style="text-align: center;">
      <view class="cu-avatar round lg shadow-blur" style="background-image:url(https://thirdwx.qlogo.cn/mmopen/vi_32/mL9gbPeKdN5I5VzfWs4FiaaTL9ybXicW18PibIfLSsHHHZ4drWzkT3up6CzmSZcGiavXxSX4KocgpH8QAvujOakbVA/132); ">
        <view class="tag">助手</view>
      </view>
      <view style="text-align: center;">凱哥</view>
    </van-col>
    <van-col span="4" offset="2" style="text-align: center;">
      <view class="cu-avatar round lg shadow-blur" style="background-image:url(https://thirdwx.qlogo.cn/mmopen/vi_32/ZZNunGlGNicicC8e91RichBsVUX97dVUjnjIrKkAe1qzzo8Q5pUyrw7RMwKfKvUBb3LXTVAsvdzhbUic4W3U989R0g/132); ">
        <view class="tag">助手</view>
      </view>
      <view style="text-align: center;">Bil</view>
    </van-col>
  </van-row>

