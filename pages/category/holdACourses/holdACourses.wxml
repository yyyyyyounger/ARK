<!-- 全局彈出類 -->
<!-- 日期選擇器，增加以當天時間一個月內的選擇限制 - 未完成 -->
<van-calendar show="{{ show_calendar }}" show-confirm="{{ false }}" bind:close="onClose" bind:confirm="onConfirm" 
  max-date="{{ maxDate_calendar }}" />
<!-- 時間選擇器，增加Overlay遮罩層控制顯示 - 未完成 -->
<van-datetime-picker
  type="time"
  value="{{ currentDate }}"
  filter="{{ filter }}"
/>

<!-- 設置步驟條 - 待定 - 待完成 -->
<view class="action">
  <button class="cu-btn bg-green shadow" bindtap="numSteps">下一步</button>
</view>
<view class="cu-steps">

  <view class="cu-item {{index>num?'':'text-blue'}}" wx:for="{{numList}}" wx:key="item">
    <text class="num {{index==2?'err':''}}" data-index="{{index + 1}}"></text> {{item.name}}
  </view>

</view>


