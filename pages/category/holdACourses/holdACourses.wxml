<view>設置步驟條</view>

<view class="action">
  <button class="cu-btn bg-green shadow" bindtap="numSteps">下一步</button>
</view>

<view class="cu-steps">
  <view class="cu-item {{index>num?'':'text-blue'}}" wx:for="{{numList}}" wx:key>
    <text class="num {{index==2?'err':''}}" data-index="{{index + 1}}"></text> {{item.name}}
  </view>
</view>


