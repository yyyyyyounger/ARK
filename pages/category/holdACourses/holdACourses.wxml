<view class="grid col-{{1}} padding-sm">
  <view class="bg-{{ColorList[0].name}} padding radius text-center shadow-blur " data-index="{{index}}" >   <!-- 必填 -->
      <text class="text-lg">必填 </text>
      <text class="cuIcon-unfold text-sl" /> 
    <!-- <view class="margin-top-sm text-df">點我添加</view> -->
  </view>
  <view class="card-menu">

    <view class="cu-list menu sm-border card-menu margin-top">
      
      <view class="cu-item">    <!-- 分享主題 -->
        <view class="content">
          <text class="cuIcon-circlefill text-{{ColorList[0].name}}"></text>
          <text class="text-grey">分享主題</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        clearable
        value="{{ value }}"
        placeholder="在此輸入分享主題"
        border="{{ false }}"
        bind:change="onChange"
      />

      <view class="cu-item">    <!-- 分享內容 -->
        <view class="content">
          <text class="cuIcon-circlefill text-{{ColorList[0].name}}"></text>
          <text class="text-grey">分享內容</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <view class="cu-item">    <!-- 多行文本輸入框 -->
        <view class="content">
          <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="多行文本输入框"></textarea>
        </view>
      </view>

      <view class="cu-item">    <!-- 分享地址 -->
        <view class="content">
          <text class="cuIcon-circlefill text-{{ColorList[0].name}}"></text>
          <text class="text-grey">分享地址</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        clearable
        value="{{ value }}"
        placeholder="在此輸入分享的地址"
        border="{{ false }}"
        bind:change="onChange"
      />

      <view class="cu-item">    <!-- 分享時間 -->
        <view class="content">
          <text class="cuIcon-circlefill text-{{ColorList[0].name}}"></text>
          <text class="text-grey">分享時間</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-cell title="选择Date" value="{{ date }}" bind:click="onDisplay" is-link/>
      <van-cell title="选择Time" value="{{  }}" bind:click="" is-link/>

      <!-- <view class="cu-item {{menuArrow?'arrow':''}}">
