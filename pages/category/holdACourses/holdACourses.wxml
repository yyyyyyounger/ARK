<!-- 全局彈出類 -->
<!-- 日期選擇器，增加以當天時間一個月內的選擇限制 - 未完成 -->
<van-calendar show="{{ show_calendar }}" show-confirm="{{ false }}" bind:close="onClose" bind:confirm="onConfirm_calendar" 
  max-date="{{ maxDate_calendar }}" color="#3498DB"/>
<!-- 彈出層 - 時間選擇器 -->
<van-popup
  round
  safe-area-inset-bottom	
  show="{{ show_timePicker }}"
  position="bottom"
  bind:close="onClose"
>
  <!-- 時間選擇器，增加彈出層控制顯示 - 未完成 -->
  <van-datetime-picker
    type="time"
    filter="{{ filter }}"
    bind:confirm="handleTimePicker"
    bind:cancel="onCancel_timerPicker"
  />
</van-popup>

<!-- 設置步驟條 - 待定 - 待完成 -->
<view class="action">
  <button class="cu-btn bg-green shadow" bindtap="numSteps">下一步</button>
</view>
<view class="cu-steps">

  <view class="cu-item {{index>num?'':'text-themeBlue'}}" wx:for="{{numList}}" wx:key="item">
    <text class="num" data-index="{{index + 1}}"></text> {{item.name}}
  </view>

</view>


