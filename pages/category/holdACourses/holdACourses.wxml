        </view>
        <view class="action">
          <view class="cu-tag round bg-orange light">音乐</view>
          <view class="cu-tag round bg-olive light">电影</view>
          <view class="cu-tag round bg-blue light">旅行</view>
        </view>
      </view> -->
    </view>

  </view>
</view>

<view class="grid col-{{1}} padding-sm">    <!-- 選填 -->
  <view class="bg-{{ColorList[1].name}} padding radius text-center shadow-blur " data-index="{{index}}" >
      <text class="text-lg">選填 </text>
      <text class="cuIcon-unfold text-sl" /> 
    <!-- <view class="margin-top-sm text-df">點我添加</view> -->
  </view>
  <view class="card-menu">

    <view class="cu-list menu sm-border card-menu margin-top">
      <view class="cu-item {{menuArrow?'arrow':''}}" wx:for="{{chooseEditArray}}" wx:key="item">
        <view class="content">
          <text class="cuIcon-circlefill text-{{ColorList[index].name}}"></text>
          <text class="text-grey">{{item}}</text>
        </view>
      </view>
    </view>

    </view>
</view>


