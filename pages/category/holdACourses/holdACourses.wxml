          <view class="cu-tag round bg-blue light">旅行</view>
        </view>
      </view> -->
    </view>

  <!-- </view> -->
</view>

<view class="grid col-{{1}} padding-sm">    <!-- 選填 -->
  <view class="bg-themeBlue-light padding radius text-center shadow-blur " data-index="{{index}}" >
      <text class="text-lg">選填 </text>
  </view>
  <view class="card-menu">

    <view class="cu-list menu sm-border card-menu margin-top">
      
      <view class="cu-item">    <!-- 助手id -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">助手id</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        hold-keyboard
        data-model="helperid_input" 
        clearable
        value="{{ value }}"
        placeholder="在此輸入助手ARKid"
        border="{{ false }}"
        bind:change="onChange_field"
      >
        <van-button slot="button" size="small" plain type="primary" color="#64b1e3">
          確認選擇
        </van-button>
      </van-field>
      <view class="cu-item">    <!-- 助手頭像，以寫入的id顯示對應頭像 - 代商討 - 未完成 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">助手頭像(確認後會顯示，最多兩位)</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>

      <view class="cu-item">    <!-- 簽到密碼 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">簽到密碼</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        hold-keyboard
        data-model="attendCode_input" 
        type="password"
        maxlength='4'
        clearable
        value="{{ value }}"
        placeholder="4位，數字/字母皆可，不區分大小寫"
        bind:change="onChange_field"
      />

    </view>

  </view>
</view>

