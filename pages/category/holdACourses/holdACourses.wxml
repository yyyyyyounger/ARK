<!-- 全局彈出類 -->
<van-notify id="van-notify" />
<van-dialog id="van-dialog" />
<!-- 日期選擇器，增加以當天時間一個月內的選擇限制 - 未完成 -->
<van-calendar show="{{ show_calendar }}" show-confirm="{{ true }}" bind:close="onClose" bind:confirm="onConfirm_calendar" 
  max-date="{{ maxDate_calendar }}" color="#3498DB" type="{{  allowVote ? 'multiple' : 'single'  }}"/>
<!-- 彈出層 - 時間選擇器 -->
<van-popup
  round
  safe-area-inset-bottom	
  show="{{ show_timePicker }}"
  position="bottom"
  bind:close="onClose"
>
  <!-- 時間選擇器，增加彈出層控制顯示 - 未完成 -->
  <van-datetime-picker
    type="time"
    filter="{{ filter }}"
    bind:confirm="handleTimePicker"
    bind:cancel="onCancel_timerPicker"
  />
</van-popup>

<!-- 設置步驟條 - 未完成 -->
<view class="cu-steps">
  <view class="cu-item {{index > stepsActive ?'':'text-themeBlue'}}" wx:for="{{numList}}" wx:key="item">
  <!-- 該處判斷 >0為第0位active，>1為第1位active，如此類推 -->
    <text class="num" data-index="{{index + 1}}"></text> {{item.name}}
  </view>
</view>

<view class="grid col-{{1}} padding-sm">    <!-- 必填 -->
  <view class="bg-themeBlue padding radius text-center shadow-blur " data-index="{{index}}" >   
      <text class="text-lg">必填 </text>
  </view>
  <!-- <view class="card-menu"> -->

    <view class="cu-list menu sm-border card-menu margin-top">
      
      <view class="cu-item">    <!-- 分享主題 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange"></text>
          <text class="text-grey">分享主題</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>              
      <!-- 使用data-xxx分隔兩個數據共用同一個綁定事件，數據必須在data{}中定義 -->
      <van-field 
        hold-keyboard
        data-model="courseName_input" 
        clearable
        value="{{ value }}"
        placeholder="在此輸入分享主題"
        border="{{ false }}"
        bind:change="onChange_field"
      />

      <view class="cu-item">    <!-- 分享內容 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange"></text>
          <text class="text-grey">分享內容</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
        <van-field
          hold-keyboard
          data-model="courseContent_input" 
          type='textarea'
          autosize
          border="{{ false }}"
          show-word-limit
          maxlength="100"
          clearable
          value="{{ value }}"
          placeholder="輸入分享內容簡介（可分行，不多於100字）"
          bind:change="onChange_field"
        />
      <!-- </view> -->

      <view class="cu-item">    <!-- 分享地址 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange"></text>
          <text class="text-grey">分享地址</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        hold-keyboard
        data-model="courseAdres_input" 
        clearable
        value="{{ value }}"
        placeholder="在此輸入分享的地址"
        border="{{ false }}"
        bind:change="onChange_field"
      />

      <view class="cu-item">    <!-- 分享時間 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange"></text>
          <text class="text-grey">分享時間</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-cell title-class="text-grey cu-item">    <!-- 允許投票switch -->
        <view slot="title">
          <view class="van-cell-text" bindtap="onChange_Switch">允許投票(默認不允許)</view>
        </view>
        <van-switch
          checked="{{ allowVote }}"
          active-color="#3498DB"
          inactive-color="#8B98A3"
          bind:change="onChange_Switch"
          size="46rpx"
        />
      </van-cell>
      <van-cell title="{{allowVote?'投票日期範圍':'选择Date'}}" bind:click="onDisplay_date" is-link title-class="text-grey cu-item" />
      <van-cell wx:if="{{datePick}}" value="{{ datePick }}" title-class="text-grey cu-item" />
      <van-cell title="{{allowVote ? '投票時間區間（開始）' : '选择Time（開始）'}}" value="{{ allowVote ? '' : timePickArray[0].begin }}" bind:click="onDisplay_time" data-model="begin" is-link title-class="text-grey cu-item" />
      <van-cell title="{{allowVote ? '投票時間區間（結束）' : '选择Time（結束）'}}" value="{{ allowVote ? '' : timePickArray[0].end }}" bind:click="onDisplay_time" data-model="end"   is-link title-class="text-grey cu-item" />
      <van-cell wx:if="{{ timePickArray[0].begin && allowVote }}" title-class="text-grey cu-item" center >
        <!-- 日期範圍，幾點-幾點 -->
        <view wx:for="{{ timePickArray }}" wx:key="index">
          <van-tag
            wx:if="{{ timePickArray[index] && timePickArray[index].begin }}"
            color="#3498DB"
            closeable
            size="medium"
            type="primary"
            id="{{index}}"
            bind:close="onClose_timeTag"
          >
          {{ timePickArray[index].begin }} - {{ timePickArray[index].end }}
          </van-tag>
        </view>
      </van-cell>
    </view>

  <!-- </view> -->
</view>

<view class="grid col-{{1}} padding-sm">    <!-- 選填 -->
  <view class="bg-themeBlue-light padding radius text-center shadow-blur " data-index="{{index}}" >
      <text class="text-lg">選填 </text>
  </view>
  <view class="card-menu">

    <view class="cu-list menu sm-border card-menu margin-top">
      
      <view class="cu-item">    <!-- 助手id -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">助手id</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        hold-keyboard
        data-model="helperid_input" 
        clearable
        value="{{ value }}"
        placeholder="在此輸入助手ARKid"
        border="{{ false }}"
        bind:change="onChange_field"
      >
        <van-button slot="button" size="small" plain type="primary" color="#64b1e3" bind:click="confirmHelper">
          確認選擇
        </van-button>
      </van-field>
      <!-- 助手頭像，以寫入的id顯示對應頭像 - 代商討 - 未完成 -->
      <!-- <view class="cu-item">    
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">助手頭像(確認後會顯示，最多兩位)</text>
        </view>
        <view class="action">
        </view>
      </view> -->
      <van-cell title-class="text-grey cu-item" wx:if="{{displayHelper}}">    <!-- 允許投票switch -->
        <!-- <view slot="title" > -->
          <van-row >
            <van-col span="9" wx:for="{{helperInfoArray}}" wx:key="name">
              <text class="cu-avatar round" style="background-image:url( {{helperInfoArray[index].Avatar}} );"></text>
            </van-col>
          </van-row>
          <van-row >
            <van-col span="9" wx:for="{{helperInfoArray}}" wx:key="name">
              <text  >{{helperInfoArray[index].name}}</text>
            </van-col>
          </van-row>
        <!-- </view> -->
      </van-cell>

      <view class="cu-item">    <!-- 簽到密碼 -->
        <view class="content">
          <text class="cuIcon-circlefill text-themeOrange-light"></text>
          <text class="text-grey">簽到密碼</text>
        </view>
        <view class="action">
          <!-- <text class="text-grey">文本內容</text> -->
        </view>
      </view>
      <van-field
        hold-keyboard
        data-model="attendCode_input" 
        type="password"
        maxlength='4'
        clearable
        value="{{ value }}"
        placeholder="4位，數字/字母皆可，不區分大小寫"
        bind:change="onChange_field"
      />

    </view>

  </view>
</view>

<!-- 提交審核按鈕 -->
<view class="padding flex flex-direction">
  <button class="shadow cu-btn bg-grey lg"                    data-model="btn_quit"   bindtap="onClick_saveSubmit">退出</button>
  <button class="shadow cu-btn bg-themeBlue margin-tb-sm lg"  data-model="btn_submit" bindtap="onClick_saveSubmit">保存並提交審核</button>
</view>
