@keyframes tipsAnimShow{
  from{
    opacity: 0;
  }  
  to{
    opacity: 1;
  }
}

@keyframes tipsAnimHide{
  from{
    opacity: 1;
  }  
  to{
    opacity: 0;
  }
}

.flexCenter {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.course{
  position: relative;
}
.helper{
  position: absolute;
  right: 0 ;
  bottom: 70rpx;
}
.title{
  font-weight: bold;
}
.tagText{
  text-transform:Uppercase;
  text-align: center;
  color: #fff;
  font-size: small;
  line-height: 100%;
  /* background-color: RGB(57,181,74); */
}
.openBg{
  background-color: RGB(57,181,74);
  display:inline-block;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 20rpx;
  border-radius: 50rpx;
  width: auto;
}
.noOpenBg{
  background-color: RGB(223,126,34);
  display:inline-block;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 20rpx;
  border-radius: 50rpx;
  width: auto;
}

.contents{
  color:rgb(114, 114, 114);
  margin-left: 30rpx; 
  margin-top: -65rpx;
}

.tips{
  position: relative;
  left: 10rpx;
  font-size: 30rpx;
  color:rgb(83, 83, 83);
  border:solid#a5dbff;
  border-radius: 20rpx;
  background : rgba(231, 246, 255, 0.726);
  backdrop-filter: blur(5rpx);
  /* animation-name: tipsAnimHide; */
  animation-duration: 2s;
  animation-fill-mode: forwards;
}

.tipsShow{
  animation-name: tipsAnimShow;
  animation-duration:0.2s
}

.tipsHide{
  animation-name: tipsAnimHide;
  animation-duration:0.2s
}