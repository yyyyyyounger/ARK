.bus-stop-info {
  font-size: 1em;
  color: #000000;
  padding-bottom: 15px;
}

.tree {
  padding: 0;
}

.col-xs-12 {
  position: relative;
  min-height: 1px;
  width: 100%;
  float: left;
}

.main {
  float: left;
  width: 100%;
}

.left {
  width: 30%;
  border-right: 3px solid #d287e2;
  text-align: right;
  padding-right: 20px;
  min-height: 23px;
  position: relative;
  bottom: 3px;
}
.out-left {
  height: 40px;
  padding-top: 7px;
  padding-right: 25px;
}

.center {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #d287e2;
  text-align: center;
  position: relative;
  right: 8px;
  color: #ffffff;
}
.out-center {
  text-align: center;
  position: relative;
  right: 8px;
  top: 11px;
  border-style: solid;
  border-width: 9px 6px;
  border-color: #f25ddf transparent transparent;
  width: 0px;
  height: 0px;
}

.right {
  width: 61%;
  position: relative;
  right: 15px;
  border-left: 3px solid #d287e2;
  padding-left: 23px;
  z-index: -1;
  bottom: 3px;
}
.out-right {
  width: 67%;
}