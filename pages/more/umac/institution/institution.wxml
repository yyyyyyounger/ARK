<!-- 彈出類 -->
<van-toast id="van-toast" />

<!-- 使用粘性佈局 - 貼+號用於學會新增poster -->

<!-- 雙列渲染poster -->
<view class="grid col-2">
  <view wx:for="{{institutes}}" wx:key="index">
    <view class="radius padding text-center shadow-blur" style="border-radius: 15rpx; "
		data-name="{{item.name}}" data-index="{{index}}" bindtap="seeImg">
      <!-- 學會poster -->
      <van-image
        wx:if="{{item.posterUrl[0]}}"
        width="10rem"
        height="10rem"
        fit="contain"
        src="{{item.posterUrl}}"
      />
      <van-image
        width="3rem"
        height="3rem"
        fit="contain"
        src="{{item.iconUrl}}"
      />
      <text>{{item.name}}</text>
    </view>
  </view>
</view>


<view class="bottom-watch"></view>