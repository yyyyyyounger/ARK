<!-- 彈出類 -->
<van-toast id="van-toast" />
<van-popup 
z-index="9999999"
show="{{ show_popup }}" 
position="top"
duration="500"
safe-area-inset-top	
safe-area-inset-bottom	
round
closeable
close-on-click-overlay
close-icon-position="bottom-right"
bind:close="closePopup"
>
	<view class="flexCenter">
		<text>項目開始時間：2021/06/03</text>
		<text> 今天是：{{today}} </text>
		<view>ARK平台已經開發了
			<text class="devColor">{{durationDay}}</text> 天
		</view>
	</view>
	
	<!-- <view class="author">一言：</view> -->
	<view>
		<!-- <view class="bracket left">『</view> -->
		<view class="word" id="hitokoto_text">{{moto.hitokoto}}</view>
		<!-- <view class="bracket right">』</view> -->
		<view class="author" id="hitokoto_author">—— 「{{(!moto.from_who) ? moto.from : moto.from_who}}」</view>
	</view>
	
	<view class="flexCenter" wx:if="{{isSignIn && isSignUp}}">
		歡迎回來！第 {{arkId}} 位ARKer ！
	</view>
	<button bindtap="jumpToTestPage">跳轉測試頁（請不要擅自進入）</button>
</van-popup>

<!-- 公告區 -->
<van-notice-bar
  left-icon="volume-o"
	scrollable 
  text="{{ARK_Notice}}" 
	bindtap="handleTapProtocol"
/>
<!-- 輪播 - 未完成 -->
<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#5595D9">
  <swiper-item wx:for="{{swiperList}}" wx:key="id" class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
    </view>
  </swiper-item>
</swiper>

<van-notice-bar mode="closeable" text="“Follow的分享” 可以在這裡看到喔！" />

<!-- Follow課程展示區 -->
<van-row>
	<van-col span="16">
		<van-collapse value="{{ active_collapse }}" accordion bind:change="onChange">
			<van-collapse-item title="ECEN1005" name="0">
				<view>時間：</view>
				<view>地點：</view>
			</van-collapse-item>
			<van-collapse-item title="ECEN1008" name="1">
				<view>時間：</view>
				<view>地點：</view>
			</van-collapse-item>
			<van-collapse-item title="ECEN1007" name="2">
				<view>時間：</view>
				<view>地點：</view>
			</van-collapse-item>
			<van-collapse-item title="CISC1000" name="3">
				<view>時間：</view>
				<view>地點：</view>
			</van-collapse-item>
			<!-- <van-collapse-item title="有赞美业" name="3" disabled>
				线上拓客，随时预约，贴心顺手的开单收银
			</van-collapse-item> -->
		</van-collapse>
	</van-col>

  <van-col span="8">
		<van-steps
			steps="{{ steps }}"
			active="{{ active_col }}"
			direction="vertical"
			active-color="#5595D9"
			bind:click-step="bindTapSteps"
		/>
	</van-col>
</van-row>
<van-row>
  <van-col offset="8" span="8">
		<van-button icon="plus" type="primary" round bind:click="jumpToCourse_tabBar">整多點 ♂</van-button>
	</van-col>
</van-row>


<text>\n</text>

<!-- 骨架 -->
<van-skeleton title row="2" loading="true">
<!-- loading為false時，顯示隱藏的內容 -->
  <view>實際內容</view>
</van-skeleton>

<van-divider contentPosition="center">快挑選些分享加入吧！</van-divider>

<!-- 免除自定義tabbar阻擋 -->
<view class="bottom-watch"></view>