<!-- 彈出類 -->
<van-toast id="van-toast" />
<van-popup 
z-index="9999999"
show="{{ show_popup }}" 
position="top"
duration="500"
safe-area-inset-top	
safe-area-inset-bottom	
round
closeable
close-on-click-overlay
close-icon-position="bottom-right"
bind:close="closePopup"
>
	<view class="flexCenter">
		<text>項目開始時間：2021/06/03</text>
		<text> 今天是：{{today}} </text>
		<view>ARK平台已經開發了
			<text class="devColor">{{durationDay}}</text> 天
		</view>
	</view>
	
	<!-- <view class="author">一言：</view> -->
	<view>
		<!-- <view class="bracket left">『</view> -->
		<view class="word" id="hitokoto_text">{{moto.hitokoto}}</view>
		<!-- <view class="bracket right">』</view> -->
		<view class="author" id="hitokoto_author">—— 「{{(!moto.from_who) ? moto.from : moto.from_who}}」</view>
	</view>
	
	<view class="flexCenter" wx:if="{{isSignIn && isSignUp}}">
		歡迎回來！第 {{arkId}} 位ARKer ！
	</view>
	<button bindtap="jumpToTestPage">跳轉測試頁（請不要擅自進入）</button>
</van-popup>

<!-- 公告區 -->
<!-- scrollable -->
<van-notice-bar
  left-icon="volume-o"
  text="{{ARK_Notice}}" 
	bindtap="handleTapProtocol"
/>
<!-- 輪播 - 輪播內容未完成 -->
<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#3498DB">
  <swiper-item wx:for="{{swiperList}}" wx:key="id" class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
    </view>
  </swiper-item>
</swiper>

<!-- <van-notice-bar mode="closeable" text="“Follow的分享” 可以在這裡看到喔！" /> -->

<!-- Follow課程展示區 -->
<view class="cu-bar bg-white margin-top">
	<view class="action">
		<text class="cuIcon-title text-themeBlue"></text>我Follow的分享
	</view>
</view>
<van-row wx:if="{{followCourseArray[0]}}">
	<van-col span="16">
		<van-collapse value="{{ active_collapse }}" accordion bind:change="onChange_collapse">
			<van-collapse-item wx:for="{{recentCourseInfoArray}}" wx:key="index" wx:if="{{recentCourseInfoArray[index].haveFollow}}" title="{{recentCourseInfoArray[index].courseInfoInput[1].input}}" name="{{index}}">
				<view bindtap="jumpToCourseDetail" data-courseid="{{recentCourseInfoArray[index]._id}}">
					<view>時間：{{recentCourseInfoArray[index].courseInfoInput[5].input[1]}} - {{recentCourseInfoArray[index].courseInfoInput[5].input[2]}}</view>
					<view>地點：{{recentCourseInfoArray[index].courseInfoInput[4].input}}</view>
				</view>
			</van-collapse-item>
		</van-collapse>
	</van-col>
	<!-- steps步驟條 -->
  <van-col span="8">
		<van-steps
			steps="{{ steps }}"
			active="{{ active_col }}"
			direction="vertical"
			active-color="#3498DB"
			bind:click-step="bindTapSteps"
		/>
	</van-col>
</van-row>
<van-divider wx:if="{{!followCourseArray[0]}}" contentPosition="center">快挑選些分享加入吧！</van-divider>

<!-- 管理員權限 - 列出待審核課程 -->
<view class="cu-bar bg-white margin-top" wx:if="{{admin}}">
	<view class="action">
		<text class="cuIcon-title text-themeBlue"></text>待審核課程
	</view>
</view>
<van-collapse value="{{ active_collapse }}" accordion bind:change="onChange_collapse" wx:if="{{admin}}">
	<van-collapse-item wx:for="{{checkingCourseList}}" wx:key="index" title="{{checkingCourseList[index].courseInfoInput[1].input}}" name="{{index}}">
		<view bindtap="jumpToCourseDetail" data-courseid="{{checkingCourseList[index]._id}}">
			<view>時間：{{checkingCourseList[index].courseInfoInput[5].input[1]}} - {{checkingCourseList[index].courseInfoInput[5].input[2]}}</view>
			<view>地點：{{checkingCourseList[index].courseInfoInput[4].input}}</view>
		</view>
	</van-collapse-item>
</van-collapse>

<!-- 使用小貼士 -->
<view class="cu-bar bg-white margin-top">
	<view class="action">
		<text class="cuIcon-title text-themeBlue"></text>使用小貼士
	</view>
</view>
<van-skeleton row="4" />

<text>\n</text>

<van-divider contentPosition="center">正在開發更多內容！敬請期待！</van-divider>

<!-- 免除自定義tabbar阻擋 -->
<view class="bottom-watch"></view>