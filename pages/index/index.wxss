/* 一言樣式 */
.bracket.left {
    position: absolute;
    left: 0;
    top: 0;
}
.word {
    font-size: 36rpx;
    text-align: left;
    line-height: 60rpx;
    margin: 0;
    margin-top: -8rpx;
    margin-left : 40rpx;
