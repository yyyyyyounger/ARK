page{background-color:#FFFFFF;}

@keyframes highTechColor{
    0%{
        color:rgb(4, 121, 255)
    }
    25%{
        color:rgb(131, 185, 255)
    }
    50%{
        color:rgb(4, 121, 255)
    }
    75%{
        color:rgb(131, 185, 255)
    }
    100%{
        color:rgb(4, 121, 255)
    }
}

@keyframes rolling{
    from{
        transform: rotateZ(9deg);
    }
    to{
        transform: rotateZ(-360deg);
    }
}

