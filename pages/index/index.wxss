  /* 默認 小船摇曳动画 */
.shipAnim0{
    left:-5rpx;
    top:10rpx;
    height:60rpx;
    width:60rpx;
    animation-name: shipShakes;
    animation-duration: 5s;
    animation-iteration-count: infinite;
  }
  .shipAnim1{
    left:-5rpx;
    top:10rpx;
    height:60rpx;
    width:60rpx;
    animation-name: shipShakes;
    animation-duration: 5s;
    animation-iteration-count: infinite;
  }
  /* 海浪動畫 */
.floodAnim{
    top:8rpx;
    left:-62rpx;
    width:60rpx;
    height:8rpx;
    animation-name: floodShakes;
    animation-duration: 3s;
    animation-iteration-count: infinite;
}
/* 小船旋轉動畫 */
.shipRoll{
    animation-name: rolling;
    animation-duration: 0.5s;
    animation-iteration-count: 1;
    left:-5rpx;
    top:10rpx;
    height:60rpx;
    width:60rpx;
}

  .colorShining{
    animation-delay: 5s;
    animation-name: highTechColor;
    animation-duration: 5s;
    animation-iteration-count: 2;
  }

