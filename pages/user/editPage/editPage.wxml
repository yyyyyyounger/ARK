<view class="page" data-weui-theme="{{theme}}">


  <mp-form-page title="" subtitle="">
    <mp-form id="form" rules="{{rules}}" models="{{formData}}">

        <mp-cells title="澳大學生號" footer="例D-C0-1234-5，則輸入DC012345">
          <mp-cell prop="name" title="UM ID" ext-class="">
            <!-- prop應該對應一種校驗規則rules -->
            <input bindinput="formInputChange" data-field="name" class="weui-input" placeholder="在此輸入學生號" />
          </mp-cell>
        </mp-cells>

        <mp-cells title="" footer="請輸入能讓同學認出你的姓名">
          <mp-cell prop="name" title="姓名" ext-class="">
              <!-- <input bindinput="formNameInputChange" data-field="name" class="weui-input" placeholder="輸入全名" /> -->
              <input 
              bindinput="formNameInputChange" 
              class="weui-input" 
              focus="{{true}}"
              adjust-adjust-position="{{true}}"
              data-field="name" 
              placeholder="在此輸入您的全名" 
              value="{{studentName_input}}" 
              />
          </mp-cell>
        </mp-cells>

        <mp-cells title="">
          <mp-cell ext-class="weui-cell_select weui-cell_select-after">
            <view slot="title" class="weui-label">年級</view>
            <picker bindchange="bindStudentYearChange" value="{{studentYearIndex}}" range="{{studentYear}}">
                <view class="weui-select">{{studentYear[studentYearIndex]}}</view>
            </picker>
          </mp-cell>
          <mp-cell ext-class="weui-cell_select weui-cell_select-after">
            <view slot="title" class="weui-label">專業</view>
            <picker bindchange="bindStudentMajorChange" value="{{studentMajorIndex}}" range="{{studentMajor}}">
                <view class="weui-select">{{studentMajor[studentMajorIndex]}}</view>
            </picker>
          </mp-cell>
        </mp-cells>
    </mp-form>

