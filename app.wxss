@import "./styles/iconfont.wxss";

page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 
    主題顏色 通過變量來實現
*/
page{
    /* 定義開發需注意顏色 */
    --devColor:#d50000;
    
    /* 定義統一的字體大小 */
    font-size: 30rpx;
}

.devColor{
    color: var(--devColor);
    font-size: 40rpx;
    text-decoration: underline;
}